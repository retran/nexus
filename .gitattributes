*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.proto text eol=lf
*.sql text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.xml text eol=lf
*.ini text eol=lf
*.conf text eol=lf
.editorconfig text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf
*.md text eol=lf
*.txt text eol=lf
LICENSE text eol=lf
README text eol=lf
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
Dockerfile text eol=lf
Dockerfile.* text eol=lf
*.dockerfile text eol=lf
docker-compose*.yml text eol=lf
docker-compose*.yaml text eol=lf
go.mod text eol=lf
go.sum text eol=lf

package-lock.json -text
yarn.lock -text
pnpm-lock.yaml -text

*.png binary
*.jpg binary
