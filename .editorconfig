root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{go,proto}]
indent_style = tab
indent_size = 4

[*.{js,ts,jsx,tsx,json,yml,yaml,toml}]
indent_style = space
indent_size = 2

[*.{md,txt}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.sql]
indent_style = space
indent_size = 2
